mixin Star(state, id, index)
        if state
            input.rate__input(type=`radio}` id=`rate_${id}_${index}` name=`rate_${id}` checked)
            label.rate__content(for=`rate${id}_${index}`)
        else
            input.rate__input(type=`radio` id=`rate_${id}_${index}` name=`rate_${id}`)
            label.rate__content(for=`rate_${id}_${index}`)

mixin RateBtn(state, id, count)
    .rate__item
        -var n = 0
        while n < count
            +Star(state, id, n++)