mixin CheckboxBtn(state, text, index)
    .checkbox__item
        if state
            input.checkbox__input(type=`checkbox` id=`checkbox_${text}_${index}` checked)
            label.checkbox__content(for=`checkbox_${text}_${index}`)= text
        else
            input.checkbox__input(type=`checkbox` id=`checkbox_${text}_${index}`)
            label.checkbox__content(for=`checkbox_${text}_${index}`)= text

mixin RadioBtn(state, text, index)
    .radio__item
