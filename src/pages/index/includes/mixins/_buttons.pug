        if state
            input.rate__input(type=`${type}` id=`rate${id}_${index}` name=`rate${id}` checked)
            label.rate__content(for=`rate${id}_${index}`)
        else
            input.rate__input(type=`${type}` id=`rate${id}_${index}` name=`rate${id}`)
            label.rate__content(for=`rate${id}_${index}`)

mixin RateBtn(state, type, id, count)
    .rate__item
        -var n = 0
        while n < count
            +Star(state, type, id, n++)