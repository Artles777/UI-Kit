main.main: section.section: .container: .row
    .inputs
        // TextField(label, state, placeholder, text, display,  width={small:150px medium:266px large:320px})
        each listInputState in inputState
            +ListInputs(
                listInputState.label,
                listInputState.state,
                listInputState.placeholder,
                listInputState.text,
                listInputState.width
            )
    .buttons
        .checkbox
            label.checkbox__label Checkbox Buttons
            each listCheckbox, index in checkboxState
                +CheckboxBtn(
                    listCheckbox.state,
                    listCheckbox.type,
                    listCheckbox.text,
                    index
                )

        .radio
            label.radio__label Radio Buttons
            each listRadio, index in radioState
                +RadioBtn(
                    listRadio.state,
                    listRadio.type,
                    listRadio.text,
                    index
                )

        .toggle
            label.toggle__label Toggle
            each listToggle, index in toggleState
                +ToggleBtn(
                    listToggle.state,
                    listToggle.type,
                    listToggle.text,
                    index
                )

        .like
            label.like__label like button
            each listLike, index in likeState
                +LikeBtn(
                    listLike.state,
                    listLike.type,
                    listLike.text,
                    index
                )

        .rate
            label.rate__label rate button
            each listRate in rateState
                +RateBtn(
                    listRate.state,
                    listRate.type,
                    listRate.id,
                    listRate.count
                )